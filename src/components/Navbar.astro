---
interface Props{
    current: string
}

const {current} = Astro.props
---
<section id="nav" class="m-4" data-current={current}>
    <div class="navbar rounded-xl  bg-base-300">
        <div class="navbar-start lg:ml-20">
            <div>
                <a href="/" class="flex justify-center">
                    <img src="/favicon.svg" class="h-6 mr-3 min-[320px]:h-10" alt="" />
                    <span class="self-center text-xl font-bold whitespace-nowrap">Birds Blog</span>
                </a>
            </div>
        </div>

        <div class="navbar-center hidden md:flex">
            <ul class="menu menu-horizontal rounded-box">
                <li><a id="home" class="" href="/">Inicio</a></li>
                <li><a id="birds" class="" href="/birds">Aves</a></li>
                <li><a id="about" class="" href="">About</a></li>
            </ul>
        </div>

        <div class="navbar-end md:mr-10 lg:mr-20">
            <label class="swap swap-rotate">
                <!-- this hidden checkbox controls the state -->
                <input id="theme" type="checkbox" />
                <!-- sun icon -->
                <svg class="swap-on fill-current w-7 h-7" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"/></svg>
                <!-- moon icon -->
                <svg class="swap-off fill-current w-7 h-7" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"/></svg>
            </label>
            <label class="swap swap-rotate md:hidden ml-4">
                <!-- this hidden checkbox controls the state -->
                <input id="hamburger" type="checkbox" />
                <!-- hamburger icon -->
                <svg class="swap-off fill-current" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512"><path d="M64,384H448V341.33H64Zm0-106.67H448V234.67H64ZM64,128v42.67H448V128Z"/></svg>
                <!-- close icon -->
                <svg class="swap-on fill-current" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512"><polygon points="400 145.49 366.51 112 256 222.51 145.49 112 112 145.49 222.51 256 112 366.51 145.49 400 256 289.49 366.51 400 400 366.51 289.49 256 400 145.49"/></svg>
            </label>
        </div>
    </div>
    <div class="hidden md:hidden w-full mt-4" id="navbar-hamburger">
        <ul class="flex flex-col menu rounded-box">
            <li><a id="home-m" class="" href="/">Inicio</a></li>
            <li><a id="birds-m" class="" href="/birds">Aves</a></li>
            <li><a id="about-m" class="" href="">About</a></li>
        </ul>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const nav = document.getElementById("nav")
        const themeSwitch = document.getElementById("theme")
        const navHamburger = document.getElementById("navbar-hamburger")
        const menuHamToggle = document.getElementById("hamburger")
        
        
        //current page indicator
        const tab = document.getElementById(nav.dataset.current)
        const tabMenu = document.getElementById(nav.dataset.current.concat("-m"))
        tab.classList.add("active")
        tabMenu.classList.add("active")

        //light/dark theme change
        const lightSwitch = () => {
            let val = document.documentElement.dataset.switch
            if (val == "off"){
                return false;
            }else if(val == "on"){
                return true;
            }
        }
        themeSwitch.checked = lightSwitch()
        themeSwitch.addEventListener("click", ()=>{
            if(themeSwitch.checked){
                localStorage.setItem("switch","on")
                localStorage.setItem("theme","cmyk")
                document.documentElement.dataset.theme = "cmyk"
            }else{
                localStorage.setItem("switch","off")
                localStorage.setItem("theme","dracula")
                document.documentElement.dataset.theme = "dracula"
            }
        })
        //show/hide vertilal menu
        menuHamToggle.checked = false;
        menuHamToggle.addEventListener("click", ()=>{
            if(menuHamToggle.checked){
                navHamburger.classList.remove("hidden")
            }else{
                navHamburger.classList.add("hidden")
            }
        })
    });
</script>

