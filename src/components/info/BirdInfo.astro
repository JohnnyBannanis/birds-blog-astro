---
import Stats from './Stats.astro';

interface Props{
    url:string
}
const {url} = Astro.props;

const response = await fetch(url);
const data = await response.json();
---

<div class="my-4 mx-8 sm:mx-16 md:mx-24 lg:mx-60 ">
    <div class="flex flex-col md:flex-row items-center justify-center my-4">
        <div class="flex flex-col items-center md:order-2 mb-4 md:mb-0">
            <h1 class="font-bold text-4xl text-center">{data.name.spanish}</h1>
            <h1 class="font-semibold italic text-2xl text-center">{data.name.latin}</h1>
            <h1 class="font-semibold  text-2xl text-center">{data.name.english}</h1>
        </div>
        
        <div>
            <img class="rounded-lg w-96 h-96 md:order-1" src={data.images.main} alt={data.name.spanish}>
        </div>
    </div>

    
    <div class="flex flex-col items-center my-4">
        <Stats  order={data.order} 
        size={data.size} 
        species={data.species}/>
    </div>
    
    <p class="text-lg border-base-200 border-4 p-4 rounded-lg">{data.habitat}</p>
    <h1>wea : {data.map.title}</h1>
    <div class="rounded-lg p-4 bg-base-100">
        <img src={data.map.image} alt="">
    </div>
    <p>fact : {data.didyouknow}</p>
</div>