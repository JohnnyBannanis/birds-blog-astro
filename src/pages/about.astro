---
import Hero from "../components/Hero.astro";
import Navbar from "../components/Navbar.astro";
import Site from "../layouts/Site.astro";

---
<Site title="Bird Blog | About.">
    <div class="flex flex-col h-screen">
		<Navbar current="about"></Navbar>
		<Hero>
            <div class="flex flex-col items-center justify-center w-full space-y-4">
                <div class="card w-96 md:w-[40rem] bg-base-100 shadow-2xl border-primary border-4">
                    <div class="card-body items-center ">
                      <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-github" viewBox="0 0 16 16">
                        <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
                      </svg>
                      <h2 class="card-title">Developed by JohnnyBannanis</h2>
                      <div class="card-actions">
                        <a href="https://github.com/JohnnyBannanis">
                          <button class="btn btn-outline border-4 border-primary hover:bg-primary hover:border-primary normal-case ">Con√≥ceme | Know me</button>
                        </a>
                      </div>
                    </div>
                  </div>
                  <div class="card w-96 md:w-[40rem] bg-base-100 shadow-2xl border-primary border-4">
                    <div class="card-body items-center ">
                      <h2 class="card-title">Powered by:</h2>

                      <div class="card-actions items-center justify-center">
                        <h1 class="text-lg">Data to build the site (Chilean Birds Dataset) : </h1>
                        <a href="https://github.com/NinjasCL/chileanbirds-dataset">
                          <button class="btn btn-outline border-4 border-primary hover:bg-primary hover:border-primary normal-case">NinjasCL</button>
                        </a>
                      </div>
                      <div class="divider"></div> 
                      <div class="card-actions">
                        <a href="https://astro.build/">
                          <button class="btn btn-outline border-4 border-primary hover:bg-primary hover:border-primary normal-case">Astro</button>
                        </a>
                        <a href="https://daisyui.com/">
                          <button class="btn btn-outline border-4 border-primary hover:bg-primary hover:border-primary normal-case">DaisyUI</button>
                        </a>
                      </div>
                    </div>
                  </div>
            </div>
            
		</Hero>
    </div>
</Site>